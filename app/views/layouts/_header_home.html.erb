<!-- DESKTOP  -->
<div class="hidden-xs visible-sm visible-md visible-lg">
  <div class="headerDesktop">
    <div class="headerDesktop-image">
      <div class="headerDesktop-logo ">
        <a href="/"><%= image_tag("logo.png", size: "90x90",:id => "img_logo_site", :alt => "Logo do site, imagem de um megafone com o nome não me calo escrito em frente") %></a>
      </div>

      <div class="headerDesktop-links" >
        <ul>
          <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path, :class => "menu"%></li>
          <li class="<%= 'active' if current_page?(dicas_path) %>"><%= link_to "Apoio Legal", dicas_path, :class => "menu"%></li>
          <li class="<%= 'active' if current_page?(ranking_path) %>"><%= link_to "Ranking", ranking_path, :class => "menu"%></li>
          <li class="<%= 'active' if current_page?(faleconosco_path)%>"><%= link_to "Contato", faleconosco_path, :class => "menu"%></li>
        </ul>
      </div>
      <div class="headerDesktop-text">
